# Project configuration (non-sensitive settings)
# These settings can be safely version-controlled
project:
  # Jira project settings
  jira_url: "https://issues.redhat.com"  # Jira instance URL
  jira_project_key: "Konflux UI"  # Jira project name

  # Google Sheets settings (optional)
  # google_spreadsheet_id: ""  # Google Spreadsheet ID for report upload
  # If you do not set, would upload to the default google-sheet.
  # IMPORTANT: For custom sheets in CI, grant Editor access to: cara-google-sheet-sa@wlin-438107.iam.gserviceaccount.com

  # replace_existing_reports: false  # If true, delete old sheets with same name but different timestamp
  # When enabled, uploading a new report will automatically delete previous versions for this team
  # Example: New "Team - PR Report - Combined - 2026-01-18 10:43" will delete "Team - PR Report - Combined - 2026-01-07 10:43"

phases:
  - name: "No AI Period"
    start: "2024-10-24"
    end: "2025-05-31"
  - name: "Cursor Period"
    start: "2025-06-01"
    end: "2025-07-31"
  - name: "Full AI Period"
    start: "2025-08-01"
    end: "2025-11-08"

default_assignee: "" # "" represent team

members:
  - email: sbudhwar@redhat.com
    leave_days: 0 # Optional when it is 0
    capacity: 1 # Optional when it is 1
  - email: wlin@redhat.com
    leave_days:
      - 26
      - 20
      - 11.5
    capacity: 0.8
  - email: kkanova@redhat.com
    capacity: 0.5
  - email: djanaki@redhat.com
  - email: rakshett@redhat.com
  - email: abhindas@redhat.com
    capacity:
      - 1.0
