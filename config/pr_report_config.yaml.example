# Send Hashed Develop ID to individuals.
# Required by CI for first-time run.
# Disabled it if you do not want to be mailed every run.
email_anonymous_id: true

# Simple scenario (optional)
output_dir: "reports/jira"
# Multiple scenario (required):
# output_dir: "reports/internal-services/jira"  # For config/my-team/internal-services/pr_report_config.yaml
# output_dir: "reports/frontend/jira"           # For config/my-team/frontend/pr_report_config.yaml

# delete old sheets with same name but different timestamp(Recommend)
# replace_existing_reports: true

# AI Analysis (optional)
# AI-powered analysis is enabled by default. Set to true to disable.
# When enabled: Generates analysis prompts and AI insights (if GOOGLE_API_KEY is configured)
# When disabled: Skips prompt and analysis generation (faster processing, no API costs)
# no_ai_analysis: true

