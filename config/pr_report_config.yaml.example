# Project configuration (non-sensitive settings)
# These settings can be safely version-controlled
project:
  # GitHub/GitLab repository settings
  # For GitHub (default):
  github_url: "https://github.com"
  github_repo_owner: "konflux-ci"  # Repository owner/organization
  github_repo_name: "konflux-ui"   # Repository name

  # For GitLab:
  # gitlab_url: "https://gitlab.com"  # Or your GitLab instance URL
  # gitlab_repo_owner: "myorg"
  # gitlab_repo_name: "myproject"

phases:
  - name: "No AI Period"
    start: "2024-10-24"
    end: "2025-05-31"
  - name: "Cursor Period"
    start: "2025-06-01"
    end: "2025-07-31"
  - name: "Full AI Period"
    start: "2025-08-01"
    end: "2025-11-08"

default_author: "" # "" represent team

members:
  # For consistent anonymization across Jira and PR reports:
  # - Add 'email' field with the same email used in Jira config
  # - This ensures the same person gets the same anonymous hash in both reports
  # - The 'name' field is the GitHub username
  #
  # Optional fields for accurate Daily Throughput calculations:
  # - leave_days: Days on leave during the phase (single value or per-phase list)
  # - capacity: Work capacity 0.0-1.0 (1.0=full time, 0.5=half time, single value or per-phase list)

  - email: sbudhwar@redhat.com  # Same email as in Jira config
    github_username: sahil143
